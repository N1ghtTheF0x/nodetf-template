{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "target": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "lib",
        "declarationDir": "lib"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "test*",
        "lib"
    ]
}
